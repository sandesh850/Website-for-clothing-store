@page
@model VelvetVeogue.Pages.UpdateOrRemoveModel
@{

}

<div class="container">

    <!--Main row-->
    <div class="row" style="margin-top:5%">

        <div class="col-12 col-md-12">

            <table class="table">
                <thead>

                    <tr>

                        <th scope="col">Image</th>
                        <th scope="col"><strong>Item Code</strong></th>
                        <th scope="col"><strong>Item Type</strong></th>
                        <th scope="col"><strong>Category Name</strong></th>
                        <th scope="col"><strong>Name</strong></th>
                        <th scope="col"><strong>Color</strong></th>
                        <th scope="col"><strong>Size</strong></th>
                        <th scope="col"><strong>Available Qty</strong></th>
                        <th scope="col"><strong>Price</strong></th>
                        <th scope="col"><strong>Action</strong></th>
                        

                    </tr>

                </thead>

                <tbody>

                    @foreach(var data in Model.Tbl_ItemDetails)
                    {
                        <tr>
                            <td>@if(data.img != null && data.img.Length > 0 )
                                {
                                    <img src="data:image/png;base64,@Convert.ToBase64String(data.img)" style="width:80px;height:80px;object-fit:cover" alt="Item Image" />
                                }
                                else
                                {
                                    <span>No Image Found</span>
                                }

                            </td>
                            <td>@(data.ItemCode)</td>
                            <td>@(data.ItemType)</td>
                            <td>@(data.CategoryName ?? "N/A")</td>
                            <td>@(data.Name)</td>
                            <td>@(data.Color ?? "N/A")</td>
                            <td>@(data.size ?? "N/A")</td>
                            <td>@(data.AvailableQty)</td>
                            <td>@(data.Price)</td>

                            <!--Action Buttons-->
                            <td>

                                <div class="d-flex gap-3">

                                    <a type="button" asp-page="UpdateItemDetails" asp-route-id="@data.Id" class="btn btn-warning">Update</a>
                                    <a type="button" class="btn btn-danger" asp-route-id="@data.Id" asp-page="RemoveItemDetails">Remove</a>

                                </div>

                            </td>

                        </tr>

                    }

                </tbody>
            </table>

        </div>

    </div>

</div>

