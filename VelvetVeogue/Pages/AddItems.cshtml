@page
@model VelvetVeogue.Pages.AddItemsModel
@{
}

<form method="post" enctype="multipart/form-data">

    <div class="container">

        <!--Main row-->
        <div class="row" style="margin-top:5%;margin-bottom:5%">

            <div class="col-12 col-md-12">

                <div class="MyAddItemsCard">

                    <!--Row 01-->
                    <div class="row text-center" style="padding-top:1%;">
                        <div class="col-12 col-md-12">

                            <label class="fw-bold" style="font-size:200%;">ADD ITEMS</label>

                        </div>
                    </div>

                    <!--Row 02-->
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-12">
                            <hr style="height:5px;" />


                        </div>

                    </div>

                    <!--Row 03-->
                    <div class="row justify-content-center">
                        <!--Left side (img)-->
                        <div class="col-12 col-md-6">

                            <!--img-->
                            <div style="padding-top:10%;display:flex;justify-content:center">
                                <span asp-validation-for="inputImg" class="text-danger"></span>
                                <img id="imgPreview" src="" style="height:100%;width:100%" />
                            </div>

                            <!--Browes btn-->
                            <div style="padding-top:10%;display:flex;justify-content:center">

                                <input type="file" id="FileInput" asp-for="inputImg" accept="image/*" hidden />
                                <button type="button" id="btnbrowes" class="btn btn-primary fw-bold" style="background-color:black;border-color:black;color:white;
                                    width:50%;margin-bottom:4%;font-size:150%">
                                    Browse

                                </button>
                              

                            </div>



                        </div>

                        <!--Right side (input fields)-->
                        <div class="col-12 col-md-6">

                            <!--Sub row 01-->
                            <div class="row" style="padding-top:5%">

                                <div class="col-12 col-md-12">

                                    <label class="Fonts">Item code</label>
                                    <input type="text" class="form-control" id="" placeholder="Item code" asp-for="tbxITMCode" style="color:grey" />


                                </div>
                            </div>


                            <!--Sub row 02-->
                            <div class="row" style="padding-top:5%">

                                <div class="col-12 col-md-12">

                                    <label class="Fonts">Item Type</label>
                                    <input type="text" class="form-control" id="" placeholder="Item Type" asp-for="tbxItemType" style="color:grey" />
                                    <span asp-validation-for="tbxItemType" class="text-danger"></span>


                                </div>
                            </div>


                            <!--Sub row 03-->
                            <div class="row" style="padding-top:5%">

                                <div class="col-12 col-md-12">

                                    <label class="Fonts">Category Name</label>
                                    <input type="text" class="form-control" id="" asp-for="tbxCategoryName" placeholder="Category Name" style="color:grey" />
                                    <span asp-validation-for="tbxCategoryName" class="text-danger"></span>

                                </div>
                            </div>

                            <!--Sub row 04-->
                            <div class="row" style="padding-top:5%">

                                <div class="col-12 col-md-12">

                                    <label class="Fonts">Name (optional)</label>
                                    <input type="text" class="form-control" id="" placeholder="Name" asp-for="tbxName" style="color:grey" />

                                </div>
                            </div>

                            <!--Sub row 05-->
                            <div class="row" style="padding-top:5%">

                                <div class="col-12 col-md-12">

                                    <label class="Fonts">Color</label>
                                    <input type="text" class="form-control" id="" asp-for="tbxcolor" placeholder="Color" style="color:grey" />
                                    <span asp-validation-for="tbxcolor" class="text-danger"></span>

                                </div>
                            </div>

                            <!--Sub row 06-->
                            <div class="row" style="padding-top:5%">

                                <div class="col-12 col-md-12">

                                    <label class="Fonts">Size</label>
                                    <input type="text" class="form-control" asp-for="tbxsizes" id="" placeholder="Size" style="color:grey" />
                                    <span asp-validation-for="tbxsizes" class="text-danger"></span>

                                </div>
                            </div>


                            <!--Sub row 07-->
                            <div class="row" style="padding-top:5%">

                                <div class="col-12 col-md-12">

                                    <label class="Fonts">Available Qty</label>
                                    <input type="text" class="form-control" id="" asp-for="tbxAvailableQTY" placeholder="Available Qty" style="color:grey" />
                                    <span asp-validation-for="tbxAvailableQTY" class="text-danger"></span>

                                </div>
                            </div>

                            <!--Sub row 08-->
                            <div class="row" style="padding-top:5%">

                                <div class="col-12 col-md-12">

                                    <label class="Fonts">Price</label>
                                    <input type="text" class="form-control" id="" asp-for="tbxprice" placeholder="Price" style="color:grey" />
                                    <span asp-validation-for="tbxprice" class="text-danger"></span>

                                </div>
                            </div>



                        </div>

                    </div>

                    <!--Row 04 hr line-->
                    <div class="row justify-content-center" style="padding-top:3%">

                        <div class="col-12 col-sm-12 col-md-12">

                            <hr style="height:5px;" />


                        </div>

                    </div>

                    <!--Row 05 btnSave-->
                    <div class="row text-center" style="padding-top:3%">

                        <div class="col-12 col-sm-12 col-md-12">

                            <button type="submit" class="btn btn-primary fw-bold" style="background-color:black;border-color:black;color:white;
                                width:50%;margin-bottom:4%;font-size:150%">
                                Save
                            </button>


                        </div>
                    </div>

                </div>

                

            </div>

        </div>

    </div>

</form>

